{
    "name": "jounress/monolog-logtail",
    "description": "Jounress Logtail handler for Monolog",
    "homepage": "https://github.com/jounress/monolog-logtail",
    "type": "library",
    "license": "ISC",
    "keywords": [
        "log", "logging", "logger", "monolog", "handler", "php"
    ],
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "monolog/monolog": "^3.8"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "pestphp/pest": "^3.5",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Logtail\\Monolog\\": "src/Monolog"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "pint",
        "test:lint": "pint --test",
        "test:unit": "pest --ci --coverage --parallel --colors=auto",
        "test": [
            "@test:lint",
            "@test:unit"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.3"
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
